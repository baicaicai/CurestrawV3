/* pages/medicineAsk/medicineAsk.wxss */
page{
    background: #ebf2f1;
}
.page {
    padding-bottom: 120rpx;
}
swiper{
  height: 430rpx;
  width: 100%;
  position: relative;
  z-index: 8;
}
swiper image{
  width: 100%;
}

.info{
  padding: 0 25rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 9;
  padding-bottom: 20rpx;
}
.info .i1{
  font-size: 38rpx;
  font-weight: bold;
  display: block;
  padding: 40rpx 0 20rpx 0;
}
.info .i2{
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}
.info .i3{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.info .i3 text {
  display: block;
  padding: 5rpx 0;
  line-height: 36rpx;
  padding-left: 25rpx;
  position: relative;
  margin-bottom: 5rpx;
}
.info .i3 text:last-child{
  margin-bottom: 0;
}
.info .i3 text::before{
  content: '';
  display: inline-block;
  position: absolute;
  top: 17rpx;
  left:0;
  margin: auto;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #30c4b6;
}

.process{
  padding: 0 25rpx;
  background: #fff;
}
.process .i1{
  font-size: 38rpx;
  font-weight: bold;
  display: block;
  padding: 40rpx 0 20rpx 0;
}
.process .list {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
}
.process .list .item{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  flex-direction: column;
  margin-right: 10rpx;
}
.process .list .item image{
  width: 90rpx;
  height: 100rpx;
}
.process .list .item view{
  width: 32rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: #ffc600;
  margin: 15rpx 0 30rpx 0;
  position: relative;
}
.process .list .item view::after{
  content: '';
  display: inline-block;
  width: 120rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: #e3e3e3;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 40rpx;

}
.process .list .item:last-child view::after{
  display: none;
}
.process .list .item text{
  font-size: 26rpx;
}

.doctor{

}
.doctor .i1{
  font-size: 38rpx;
  font-weight: bold;
  display: block;
  padding: 40rpx 25rpx 20rpx 25rpx;
  background: #fff;
}
.doctor scroll-view {
  padding: 40rpx 25rpx;
  box-sizing: border-box
}
.doctor .list {
  overflow: auto;
  width: 1300rpx;
}
.doctor .item{
  width: 320rpx;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 10rpx 18rpx 20rpx 0px rgba(235, 242, 241, 0.6);
  float: left;
  margin-right: 25rpx;
  padding-bottom: 40rpx;
}
.doctor .item:last-child {
  margin-right: 0;
}
.doctor .item .hd{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin: 0 auto;
  padding: 30rpx 0 20rpx 0
}
.doctor .item .hd text{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right:-10rpx;
  top: 25rpx;
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  justify-content: center;

}
.doctor .item .hd image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0px 8rpx 8rpx 0px rgba(0, 120, 109, 0.15);
}
.doctor .item .bd{
  text-align: center;
}
.doctor .item .bd .o1{
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}
.doctor .item .bd .o2{
  font-size: 26rpx;
  display: block;
  margin-bottom: 5rpx;
}
.doctor .item .bd .o3{
  font-size: 26rpx;
  display: block;
  margin-bottom: 25rpx;
}
.doctor .item button{
  font-size: 28rpx;
  color: #fff;
  background-color: #1fcebe;
  box-shadow: 0px 14rpx 14rpx 0px rgba(48, 196, 182, 0.3);
  border-radius: 5rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.doctor .item button::after{
  border: none;
}

.question{
  padding: 0 25rpx;
  background: #fff;
  padding-bottom: 30rpx;
}
.question .i1{
  font-size: 38rpx;
  font-weight: bold;
  display: block;
  padding: 40rpx 0 20rpx 0;
}
.question .item {
  padding: 25rpx 0;
}
.question .item .i2{
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}
.question .item .i2 image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}
.question .item .i2 text{
  line-height: 40rpx;
  flex: 1;
  display: block;
}
.question .item .i3{
  font-size: 26rpx;
  display: flex;
  align-items: flex-start;
}
.question .item .i3 image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.question .item .i3 text{
  line-height: 40rpx;
  flex: 1;
  display: block;
}

.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex
}
.btn image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.btn .i1 {
  width: 320rpx;
  background: #30c4b6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
}
.btn .i2{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #30c4b6;
}
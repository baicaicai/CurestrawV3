/* pages/medicineSearch/medicineSearch.wxss */
.fSearch{
  background: #30c4b6;
}

.history{
  padding: 25rpx;

}
.history text{
  font-size: 28rpx;
  padding: 25rpx 0;
  padding-right: 0;
  display: block;
}
.history .box{
  
}
.history .box .tip{
  font-size: 28rpx;
  background: #f5f5f5;
  padding: 15rpx 40rpx;
  border-radius: 5rpx;
  display: inline-block;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
}
.nothing{
  text-align: center;
  padding: 25rpx 0;
  padding-bottom: 35rpx;
  padding-top: 200rpx;
}
.nothing image{
  width: 200rpx;
  height: 150rpx;
}
.nothing .o1{
  color: #535e5c;
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  text-align: center;
  padding: 20rpx 0;
  padding-top: 0;
}
.nothing .o2{
  color: #535e5c;
  font-size: 26rpx;
  line-height: 42rpx;
  display: block;
  padding: 0 90rpx;
  text-align: center;
}

.zx{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-bottom: 60rpx;
}
.zx text{
  color: #535e5c;
  font-size: 28rpx;
  display: block;
  text-align: center;
  padding: 35rpx 0 55rpx 0;
}
.zx button{
  font-size: 36rpx;
  color: #fff;
  background-color: #1fcebe;
  box-shadow: 0px 14rpx 14rpx 0px rgba(48, 196, 182, 0.3);
  border-radius: 5rpx;
  width: 290rpx;
}
.zx button::after{
    border: none
}
.hide{
  display: none
}




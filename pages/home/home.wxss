/* pages/home/home.wxss */
page{
  background: #ebf2f1;
}
.page{
  padding-bottom: 20rpx;
}

swiper{
  height: 490rpx;
  width: 100%;
}
swiper image{
  width: 100%;
}

.fSearch{
  border-bottom: 1rpx solid #e3e3e3;
}

.more{
  display: flex;
  align-items: center;
  padding:25rpx ;
  position: relative;
  background: #fff;
}
.more .i1 {
  width: 40rpx;
  height: 40rpx;
}
.more .i2 {
  font-size: 30rpx;
}
.more .i3 {
  position: absolute;
  right: 25rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  align-items: center;
  height: 40rpx;
}
.more .i3 text{
  color: #888;
  font-size: 28rpx;
}
.more .i3 image{
  width: 30rpx;
  height: 40rpx;
}

.list{
  padding: 0 25rpx;
  background: #fff;
}
.list .item{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e3e3e3;
}
.list .item:last-child{
  border-bottom: none;
}
.list .item .left{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.list .item .left .i1{
  font-size: 34rpx;
  font-weight: bold;
  display: block;
  padding-bottom: 15rpx;
}
.list .item .left .i2{
  font-size: 26rpx;
  color: #888888;
  display: block;
  padding-bottom: 35rpx;
}
.list .item .left .i3{
  display: flex;
  align-items: center;
}
.list .item .left .i3 image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.list .item .left .i3 text{
  font-size: 26rpx;
  width: 170rpx;
  display: block;
}
.list .item .right{
  width: 200rpx;
  height: 160rpx;
}
.list .item .right image {
  width: 100%;
  height: 100%;
}


.ask {
  background: #fff;
  height: 130rpx;
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  z-index: 9;
}
.ask .left{
    flex: 1;
    padding-left: 25rpx;
}
.ask .left .i1{
  display: flex;
  align-items: center;
  height: 45rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.ask .left .i1 view{
  width: 75rpx;
  text-align: center;
  height: 45rpx;
  margin-right: 35rpx;
}
.ask .left .i1 image{
  width: 45rpx;
  height: 45rpx;
}
.ask .left .i1 text{
  font-size: 34rpx;
  font-weight: bold;
}
.ask .left .i1 .tip{
  font-size: 34rpx;
  font-weight: bold;
  color: #eb2936;
  margin-left: 20rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.ask .left .i2 {
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
}
.ask .left .i2 text{

}
.ask .left .i2 .guo {
  width: 75rpx;
  text-align: center;
  display: inline-block;
  margin-right: 35rpx;
}
.ask .right{
  width: 30rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.ask .right image{
  width: 30rpx;
  height: 40rpx;
}
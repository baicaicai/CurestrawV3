/* pages/medicineSearch2/medicineSearch2.wxss */
.fSearch{
  background: #30c4b6;
}
page{
  background: #ebf2f1;
}
.page{
  padding-bottom: 20rpx;
}

.bar {
  font-size: 26rpx;
  color: #888888;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ebf2f1;
}


.list{
  padding: 0 25rpx;
  background: #fff;
}
.list .item{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e3e3e3;
}
.list .item:last-child{
  border-bottom: none;
}
.list .item .left{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.list .item .left .i1{
  font-size: 34rpx;
  font-weight: bold;
  display: block;
  padding-bottom: 15rpx;
}
.list .item .left .i2{
  font-size: 26rpx;
  color: #888888;
  display: block;
  padding-bottom: 35rpx;
}
.list .item .left .i3{
  display: flex;
  align-items: center;
}
.list .item .left .i3 image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.list .item .left .i3 text{
  font-size: 26rpx;
  width: 170rpx;
  display: block;
}
.list .item .right{
  width: 200rpx;
  height: 160rpx;
}
.list .item .right image {
  width: 100%;
  height: 100%;
}


.nothing{
  text-align: center;
  padding: 25rpx 0;
  padding-bottom: 35rpx;
  padding-top: 200rpx;
}
.nothing image{
  width: 200rpx;
  height: 150rpx;
}
.nothing .o1{
  color: #535e5c;
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  text-align: center;
  padding: 20rpx 0;
  padding-top: 0;
}
.nothing .o2{
  color: #535e5c;
  font-size: 26rpx;
  line-height: 42rpx;
  display: block;
  padding: 0 90rpx;
  text-align: center;
}

.zx{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-bottom: 60rpx;
}
.zx text{
  color: #535e5c;
  font-size: 28rpx;
  display: block;
  text-align: center;
  padding: 35rpx 0 55rpx 0;
}
.zx button{
  font-size: 36rpx;
  color: #fff;
  background-color: #1fcebe;
  box-shadow: 0px 14rpx 14rpx 0px rgba(48, 196, 182, 0.3);
  border-radius: 5rpx;
  width: 290rpx;
}
.zx button::after{
    border: none
}
.hide{
  display: none
}

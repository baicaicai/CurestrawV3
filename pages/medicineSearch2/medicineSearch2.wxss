/* pages/medicineSearch2/medicineSearch2.wxss */
.fSearch{
  background: #30c4b6;
}
page{
  background: #ebf2f1;
}
.page{
  padding-bottom: 20rpx;
}

.bar {
  font-size: 26rpx;
  color: #888888;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ebf2f1;
}


.list{
  padding: 0 25rpx;
  background: #fff;
}
.list .item{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e3e3e3;
}
.list .item:last-child{
  border-bottom: none;
}
.list .item .left{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.list .item .left .i1{
  font-size: 34rpx;
  font-weight: bold;
  display: block;
  padding-bottom: 15rpx;
}
.list .item .left .i2{
  font-size: 26rpx;
  color: #888888;
  display: block;
  padding-bottom: 35rpx;
}
.list .item .left .i3{
  display: flex;
  align-items: center;
}
.list .item .left .i3 image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.list .item .left .i3 text{
  font-size: 26rpx;
  width: 170rpx;
  display: block;
}
.list .item .right{
  width: 200rpx;
  height: 160rpx;
}
.list .item .right image {
  width: 100%;
  height: 100%;
}